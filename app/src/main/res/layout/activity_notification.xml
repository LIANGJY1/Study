<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification.NotificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_create_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create a Notification"/>

            <Button
                android:id="@+id/bt_notify_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify a Notification"/>

            <Button
                android:id="@+id/bt_cancel_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel a Notification"/>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>