<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_layoutInflater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LayoutInflater"/>
            <Button
                android:id="@+id/bt_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view click"/>
            <Button
                android:id="@+id/bt_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view params"/>
            <Button
                android:id="@+id/bt_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scroll view"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>